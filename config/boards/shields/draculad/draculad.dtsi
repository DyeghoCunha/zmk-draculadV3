#include <dt-bindings/zmk/matrix_transform.h>

& {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
        map = < 
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                         RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)                         RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(3,1)         RC(3,8) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
                                    RC(3,2) RC(3,3) RC(3,4)         RC(3,5) RC(3,6) RC(3,7)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        row-gpios = <&pro_micro_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro_d 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    // Encoders com pinos dedicados
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        label = "LEFT_ENCODER";
        a-gpios = <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;   // P0.08
        b-gpios = <&pro_micro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;   // P0.09
        steps = <80>;
    };

    right_encoder: encoder_right {
        compatible = "alps,ec11";
        label = "RIGHT_ENCODER";
        a-gpios = <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  // P0.10
        b-gpios = <&pro_micro 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  // P0.11
        steps = <80>;
    };

    right_encoder2: encoder_right2 {
        compatible = "alps,ec11";
        label = "RIGHT_ENCODER2";
        a-gpios = <&pro_micro 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  // P0.12
        b-gpios = <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  // P0.14
        steps = <80>;
    };

    // RGB LEDs
    led_strip_left: rgb_left {
        compatible = "ws2812-strip";
        label = "RGB UnderGlow Left";
        chain-length = <10>;
        color-order = "GRB";
        gpio = <&gpio0 13 GPIO_ACTIVE_HIGH>;
    };

    led_strip_right: rgb_right {
        compatible = "ws2812-strip";
        label = "RGB UnderGlow Right";
        chain-length = <10>;
        color-order = "GRB";
        gpio = <&gpio0 13 GPIO_ACTIVE_HIGH>;
    };

    sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder &right_encoder2>;
        triggers-per-rotation = <20>;
    };

    // Mapeamento completo dos pinos da controladora
    connector: pro_micro {
        compatible = "sparkfun,pro-micro";
        gpio-map = <
            0   &gpio0 0   0
            1   &gpio0 1   0
            2   &gpio0 2   0
            3   &gpio0 3   0
            4   &gpio0 4   0
            5   &gpio0 5   0
            6   &gpio0 6   0
            7   &gpio0 7   0
            8   &gpio0 8   0
            9   &gpio0 9   0
            10  &gpio0 10  0
            11  &gpio0 11  0
            12  &gpio0 12  0
            13  &gpio0 13  0
            14  &gpio0 14  0
            15  &gpio0 15  0
            16  &gpio0 16  0
            17  &gpio0 17  0
            18  &gpio0 18  0
            19  &gpio0 19  0
            20  &gpio0 20  0
            21  &gpio0 21  0
            22  &gpio0 22  0
            23  &gpio0 23  0
            24  &gpio0 24  0
            25  &gpio0 25  0
            26  &gpio0 26  0
            27  &gpio0 27  0
            28  &gpio0 28  0
            29  &gpio0 29  0
            30  &gpio0 30  0
            31  &gpio0 31  0
        >;
    };
};

